
{% extends 'base.html.twig' %}

{% block title %}L'inscription{% endblock %}

 {% block stylesheets %}
 <style> 
.centered-form {display: flex;justify-content: center;align-items: center;min-height: 100vh; }

.form-container { background-color: #F8F8FF; padding: 0.5em; max-width: 400px; width: 100%;}

.form-title {margin-bottom: 1.5em;text-align: center;}   
</style>
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">

 {% endblock %}

{% block body %}
<nav class="navbar justify-content-center fs-3" style="background-color: #e3f2fd;"> AppGestions Users </nav >
  
<div class="container centered-form ">
  <div class="form-container">
      <h5 class="text-info-emphasis form-title">User Data</h5>
     
      <form method="post" action="{{ path('Update', {'id': row.Id}) }}">
          <div class="mb-3 ms-5">
             <label  class="form-label">NomUsers :</label>
             <input type="text" class="form-control w-75" name="Nom" value="{{ row.Nom }}">
          </div>
          <div class="mb-3 ms-5">
            <label class="form-label">EmailUsers :</label>
            <input type="email" class="form-control w-75" name="Email" value="{{ row.Email }}">
          </div>
          <div class="mb-3 ms-5">
            <label class="form-label">PasswordUsers</label>
            <input type="password" class="form-control w-75" name="Password" value="{{ row.Password }}" >
          </div>
          
          <div class="mb-3 ms-5">
          <button type="submit" class="btn btn-primary " name="submit">Valider</button>
          <a href="{{ path('data') }}" class="btn btn-danger">Annuler</a>
          </div>
           
      </form>
 </div>

 </div>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>

{% endblock %}