
{% extends 'base.html.twig' %}

{% block title %}Login{% endblock %}

{% block stylesheets %}
<style>
    .centered-form{display: flex; justify-content: center; align-items: center; min-height: 100vh;}
    .form-container{width: 100%; max-width: 400px; background-color: #F8F8FF; padding: 0.5em; border-radius: 10px; box-shadow: 0 0 20px rgba(0, 0, 0, 0.1); }
    .form-title {margin-bottom: 1em;  text-align: center; }  
</style>
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
{% endblock %}

{% block body %}
<nav class="navbar justify-content-center fs-3 " style="background-color: #e3f2fd;">  AppGestions Users </nav >

  <div class="container centered-form ">
    <div class="form-container">
        <h3 class="text-info-emphasis form-title">Login</h3>
        <form method="post" action="{{ path('Login') }}">
            <div class="mb-3 ms-5">
            <input type="email" class="form-control w-75" name="Email" placeholder="Enter your Email"  required>
            </div>
            <div class="mb-3 ms-5">
            <input type="password" class="form-control w-75" name="Password" placeholder="Enter your Password" required>
            </div>
            <div class="d-grid gap-2 ms-5">
            <button type="submit" class="btn btn-primary w-75">se connecter</button>
            <a href="#" class="btn btn-danger w-75">Annuler</a>
            </div>
            <div class="text-center mt-3">
                <a href="{{ path('Inscrire') }}">Create an account</a>
            </div>
        </form>
    </div>
</div>
 <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>

{% endblock %}