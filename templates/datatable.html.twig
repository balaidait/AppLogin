{% extends 'base.html.twig' %}

{% block title %}User Data{% endblock %}

{% block stylesheets %}

<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.6.0/css/all.min.css" integrity="sha512-Kc323vGBEqzTmouAECnVceyQqyqdsSiqLQISBL29aUW4U/M7pSPA/gEUZQqv1cwx4OnYxTxve5UMg5GT6L4JJg==" crossorigin="anonymous" referrerpolicy="no-referrer" />

{% endblock %}

 {% block javascripts %}
 <script>


    
</script>
{% endblock %}
{% block body %}
<nav class="navbar justify-content-center fs-3 mb-5" style="background-color: #e3f2fd;"> App Gestions Users </nav>

<div class="d-flex justify-content-around">
  <p class="p-2">List Users</p>
  <a href="{{ path('Inscrire') }}" class="p-2">
    <i class="fa-solid fa-repeat"></i>
  </a>
</div>
<div class="container d-flex justify-content-center">

  <table class="table  table-striped table-hover text-center " style= " max-width: 850px;">
      <tr class="table-info">
        <td>id</td>
        <td>nom</td>
        <td>email</td>
        <td>action</td>
      </tr>
    <tbody>
            {% for user in users %}
                <tr>
                    <td>{{ user.Id }}</td>
                    <td>{{ user.Nom }}</td>
                    <td>{{ user.Email }}</td>
                    <td>
                    <a href="{{ path('Update', {'id': user.Id}) }}" class="link-warning"><i class='nav-icon fas fa-edit '></i></a>
                    <a href="{{ path('delete', { 'id': user.Id }) }}" class="link-danger"><i class='nav-icon fas fa-trash '></i></a>
                    </td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="5">No data found</td>
                </tr>
            {% endfor %}
    </tbody>              
  </table>
</div>

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
<script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
{% endblock %}
